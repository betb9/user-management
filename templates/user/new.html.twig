{% extends 'base.html.twig' %}

{% block title %}
    {{ is_edit ? "Modifier l'utilisateur" : "Créer un utilisateur" }}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">{{ is_edit ? "Modifier l'utilisateur" : 'Créer un utilisateur' }}</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="mb-3">
            {{ form_label(form.firstName, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.firstName) }}
            </div>
        </div>
        <div class="mb-3">
            {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.lastName) }}
            </div>
        </div>
        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            <div class="invalid-feedback d-block">
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary">Retour à la liste</a>
            <button class="btn btn-{{ is_edit ? 'primary' : 'success' }}">{{ is_edit ? 'Modifier' : 'Créer' }}</button>
        </div>

    {{ form_end(form) }}
</div>

{% endblock %}